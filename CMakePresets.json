{
    "version": 6,
    "configurePresets": [
        {
          "name": "default",
          "binaryDir": "${fileDir}/build"
        }
    ],
    "buildPresets": [
        {
            "name": "all",
            "configurePreset": "default",
            "targets": ["all"]
        },
        {
            "name": "tests",
            "configurePreset": "default",
            "targets": ["build-tests"]
        }
    ],
    "testPresets": [
        {
            "name": "all",
            "configurePreset": "default",
            "execution": {
                "noTestsAction": "error"
            }
        }
    ],
    "workflowPresets": [
        {
            "name": "build_and_test",
            "steps": [
                {
                    "type": "configure",
                    "name": "default"
                },
                {
                    "type": "build",
                    "name": "tests"
                },
                {
                    "type": "test",
                    "name": "all"
                }
            ]
        }]
}
